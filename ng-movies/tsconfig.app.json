{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./out-tsc/app",
    "module": "esnext",
    "target": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "declaration": false,
    "sourceMap": true,
    "types": [
      "node",
      "jasmine"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@movies/*": [
        "src/app/movies/*"
      ],
      "@data/*": [
        "src/data/*"
      ],
    }
  },
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
